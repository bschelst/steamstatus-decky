{
  "name": "steamstatus-decky",
  "version": "1.2.1",
  "description": "Display Steam status, player counts, and service health on your Steam Deck",
  "type": "module",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
