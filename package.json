    "steam",
    "status",
    "steamstat",
    "steam-deck",
    "deck"
  ],
  "author": "Schelstraete Bart",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/bschelst/steamstatus-decky/issues"
  },
  "homepage": "https://github.com/bschelst/steamstatus-decky",
  "devDependencies": {
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.7.1",
    "@types/react": "16.14.0",
    "@types/react-dom": "16.9.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.22.4",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@decky/api": "^1.1.2",
    "react-icons": "^4.12.0",
    "recharts": "^2.15.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
